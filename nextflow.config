import java.nio.file.Paths


params {
	config_dir = "conf"
}


singularity {
        enabled = true
        runOptions = "-B /camp"
}


executor {
   name= 'slurm'  
}

//
// General configuration options
//

process {
    cpus = 1
    memory = "20G"
    time = "2:00:00"
    publishDir = [
        path: "${params.outdir}",
        mode: "copy",
        overwrite: true
    ]

    withName: make_scv_file { 
        publishDir = [
                path: "${params.outscv}",
                mode: "copy",
                overwrite: true
        ]
    }
}

includeConfig "${params.config_dir}/local.profile"
